{
  "name": "wildwood-booking",
  "version": "0.1.0",
  "packageManager": "pnpm@10.11.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "preview": "pnpm exec opennextjs-cloudflare build && pnpm exec opennextjs-cloudflare preview",
    "deploy": "pnpm exec opennextjs-cloudflare build && pnpm exec opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "init-db": "npx tsx scripts/init-dev-db.ts",
    "migrate": "npx tsx scripts/run-migration.ts",
    "migrate:prod": "npx tsx scripts/run-migration.ts --remote"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "better-sqlite3": "^12.6.2",
    "date-fns": "^4.1.0",
    "isomorphic-dompurify": "^2.36.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.16.5",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "wrangler": "4.65.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
